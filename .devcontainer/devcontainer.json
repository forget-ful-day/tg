{
  "name": "WebSocket Chat",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [3000, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Backend Server",
      "onAutoForward": "openPreview"
    },
    "8080": {
      "label": "Frontend",
      "onAutoForward": "openPreview"
    }
  },
  "postCreateCommand": "npm install && cd server && npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  }
}